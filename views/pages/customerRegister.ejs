<br>
<div class="container">
  <div class="row">
      <div class="col-lg-12">
        <center><h1><u>Fill All The Details</u></h1></center>
        <br>
        <form action="/cCreate" method="post" class="customer_register">
          <div class="form-group">
            <% if(flash && flash.err) { %>
              <% if(flash.err=="Customer Already Registered with the Entered Email Id") { %>
                <p class="alert alert-danger">
                  <% Object.keys(flash.err).forEach(function(error){ %>
                    <%= flash.err[error] %>
                  <% }) %>
                </p>
              <% } %>
        
              <% if(flash.err=="Customer Added Successfully") { %>
                <p class="alert alert-success">
                  <% Object.keys(flash.err).forEach(function(error){ %>
                    <%= flash.err[error] %>
                  <% }) %>
                </p>
              <% } %>
            <% } %>
          </div>
            <br>
          <div class="form-group">
            <label>Customer Name</label>
            <input type="text" class="form-control" name="eName" placeholder="Enter Your Name" >
          </div>
          <div class="form-group">
            <label>Prefered Restaurant Type</label>
            <input type="text" class="form-control" name="ePRT" placeholder="veg/non-veg" >
          </div>
          <div class="form-group">
            <label>Email address</label>
            <input type="email" class="form-control" name="eEmail" aria-describedby="emailHelp" placeholder="Enter email" >
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="text" class="form-control" name="ePassword" placeholder="Password" >
          </div>
          <div class="form-group">
            <label>Phone No.</label>
            <input type="text" class="form-control" name="ePhoneNo" placeholder="Phone No." >
          </div>
          <div class="form-group">
            <label>Address</label>
            <input type="text" class="form-control" name="eAddress" placeholder="Address" >
          </div>
          <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
          <input type="hidden" name="_csrf" value="<%=_csrf%>">
        </form>  
    </div>
  </div>
</div>
<script>
  $('.customer_register').validate();
</script>