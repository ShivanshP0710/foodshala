<br>
<div class="container">
  <div class="row">
      <div class="col-lg-12">
        <center><h1><u>Fill All The Details</u></h1></center>
        <br>
        <form action="/iAdd" method="post">
          <div class="form-group">
            <% if(flash && flash.err) { %>
              <% if(flash.err=="Item Already Exists in the Restaurant List") { %>
                <p class="alert alert-danger">
                  <% Object.keys(flash.err).forEach(function(error){ %>
                    <%= flash.err[error] %>
                  <% }) %>
                </p>
              <% } %>
        
              <% if(flash.err=="Item Added Successfully") { %>
                <p class="alert alert-success">
                  <% Object.keys(flash.err).forEach(function(error){ %>
                    <%= flash.err[error] %>
                  <% }) %>
                </p>
              <% } %>
            <% } %>
          </div>
            <br>
          <div class="form-group">
            <label>Restaurant Name</label>
            <input type="text" class="form-control" name="eRName" placeholder="Enter Restaurant Name" required >
          </div>
          <div class="form-group">
            <label>Item Name</label>
            <input type="text" class="form-control" name="eIName" placeholder="Enter Item Name" required >
          </div>
          <div class="form-group">
            <label>Item Price</label>
            <input type="text" class="form-control" name="ePrice" placeholder="75" required >
          </div>
          <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
          <input type="hidden" name="_csrf" value="<%=_csrf%>">
        </form>  
    </div>
  </div>
</div>