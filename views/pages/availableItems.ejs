<!-- Items Section Begin -->
    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title related__product__title">
                        <h2>Foods In Cart</h2>
                    </div>

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Restaurant Name</th>
                                <th>Item Name</th>
                                <th>Price</th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- ejs syntax -->
                            <% iData.forEach(function(dbItem){ %>
                            <tr>
                                <td><%= dbItem.Restaurant_Name %></td>
                                <td><%= dbItem.Item_Name %></td>
                                <td><%= dbItem.Price %></td>
                                <% if(req.session.loggedRestaurant==true){ %>
                                    <td>
                                        <td>
                                            <form action="/aiDelete/<%= dbItem.id %>" method="post">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                                <input type="hidden" name="_csrf" value="<%=_csrf%>">
                                            </form>
                                        </td>
                                    </td>
                                <% } else if(req.session.loggedCustomer==true){ %>
                                    <td>
                                        <form action="/iAddToCart/<%= dbItem.id %>" method="post">
                                            <button type="submit" class="primary-btn">ADD TO CART</button>
                                            <input type="hidden" name="_csrf" value="<%=_csrf%>">
                                        </form>
                                    </td>
                                <% } else { %>
                                    <td>
                                        <a class="primary-btn" href="/pages/customerLogin" role="button">ADD TO CART</a>
                                    </td>
                                <% } %>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
<!-- Items Section End -->